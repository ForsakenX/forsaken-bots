class Resolve < Meth::Plugin
  def initialize *args
    super *args
    @bot.command_manager.register("resolve",self)
  end
  def help(m=nil, topic=nil)
    "resolve [name] => Performs an ip lookup for dns."
  end
  def command m
    help unless ip = m.params.shift
  end
  private
  def resolve
    begin
      Resolv.getaddress(ip)
    rescue Exception
      "Error: #{$!}"
    end
  end
end
